{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build C++ (g++)",
      "type": "shell",
      "command": "g++",
      "args": [
        "-g",                     // Cờ BẮT BUỘC để gỡ lỗi
        "-std=c++11",             // Dùng tiêu chuẩn C++11
        "${file}",                // Lấy tệp .cpp bạn đang mở
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}" // Tên tệp thực thi (không có .exe)
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}